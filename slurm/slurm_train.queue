setenv LD_LIBRARY_PATH ${LD_LIBRARY_PATH}:/rhome/mdodson/.micromamba/envs/learn/lib
echo $LD_LIBRARY_PATH

cd /rhome/mdodson/testbed

set runcmd = /rhome/mdodson/.micromamba/envs/learn/bin/python

